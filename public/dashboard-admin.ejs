<script>
  // const host = "http://localhost/backend_maquiagem";
  const host = "http://maquiagemback.atwebpages.com";
  var alunos = [];
  var videos = [];

  $(document).ready(function(){
    $.ajax({
      headers: { "Accept": "application/json"},
      type: 'GET',
      url: host + '/get-student.php',
      crossDomain: true,
      beforeSend: function(xhr){
        xhr.withCredentials = true;
      },
      success: function(data, textStatus, request){
        alunos = JSON.parse(data);
        alunos.map(item => {
          $('.list-name').before(`<li class="list-group-item">
                                  <div class="row">
                                    <div class="col-md-10">
                                      ${item.nome} (${item.user})
                                    </div>
                                    <div class="col-md-1">
                                      <img src="dist/img/icons/edit.png" onclick="editAluno('${item.id}')"/>
                                    </div>
                                    <div class="col-md-1">
                                      <img src="dist/img/icons/trash.png" onclick="remove('${item.id}', 'alunos')" />
                                    </div>
                                  </div>
                                </li>`)
        });
      }
    });
    $.ajax({
      headers: { "Accept": "application/json"},
      type: 'GET',
      url: host + '/get-course.php',
      crossDomain: true,
      beforeSend: function(xhr){
        xhr.withCredentials = true;
      },
      success: function(data, textStatus, request){
        videos = JSON.parse(data);
        videos.map(item => {
          $('.list-video').before(`
                                <li class="list-group-item">
                                  <div class="row">
                                    <div class="col-md-10">
                                      ${item.num} - ${item.title}
                                    </div>
                                    <div class="col-md-1">
                                      <img src="dist/img/icons/edit.png" onclick="editVideo('${item.id}')"/>
                                    </div>
                                    <div class="col-md-1">
                                      <img src="dist/img/icons/trash.png" onclick="remove('${item.id}', 'videos')" />
                                    </div>
                                  </div>
                                </li>`)
        });
      }
    });
  });

  function searchId(id, table){
    for(let i = 0; i < table.length; i++){
      if(table[i].id == id){
        return i;
        break
      }
    }
  }

  function editAluno(id){
    scroll(0, 200)
    let i = searchId(id, alunos);
    let ok = Object.keys(alunos[i]);
    ok.map(item => {
      if(item != "date_subscribe" && item != "last_class"){
        if(item == "id"){
          document.getElementById("ida").value = alunos[i][item];
        } else {
          document.getElementById(item).value = alunos[i][item];
        }
      }
    });
    document.getElementById('lbl-a1').innerText = "Editar Aluno";
    document.getElementById('lbl-a2').innerText = "Salvar";
  }

  function editVideo(id){
    let i = searchId(id, videos);
    let ok = Object.keys(videos[i]);
    ok.map(item => {
      if(item != "date_subscribe" && item != "last_class"){
        if(item == "id"){
          document.getElementById("idv").value = videos[i][item];
        } else {
          document.getElementById(item).value = videos[i][item];
        }
      }
    });
    document.getElementById('lbl-v1').innerText = "Editar Vídeo";
    document.getElementById('lbl-v2').innerText = "Salvar";
  }

  function remove(id, table){
    let i = searchId(id, eval(table));
    let field;
    let file;
    table == "videos" ? (field = "title", file = "/remove-course.php") : (field = "nome", file = "/remove-student.php");
    let r = confirm(`Deseja mesmo remover "${eval(table)[i][field].toUpperCase()}" da sua lista de ${table.toUpperCase()}?`);
    if(r){
      $.ajax({
        headers: { "Accept": "application/json"},
        type: 'POST',
        url: host + file,
        data: {
          id: id
        },
        crossDomain: true,
        beforeSend: function(xhr){
          xhr.withCredentials = true;
        },
        success: function(data, textStatus, request){
          location.reload();
        }
      });
    }
  }

  let cursar = document.getElementById("cursar");

  cursar.addEventListener("click", function(){
    if(localStorage.getItem("data").split(",")[6] == 0){
      location.href = "/course?id=0";
    } else {
      location.href = "course?id="+localStorage.getItem("data").split(",")[6]
    }
  });
</script>
