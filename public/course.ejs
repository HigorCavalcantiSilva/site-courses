<script>

let arr = [];

`<%for (var c=0;c<res.length;c++){%>
        ${arr.push(['<%= res[c].number %>', '<%= res[c].title %>', '<%= res[c].link %>', '<%= res[c].description %>'])}
<%}%>`
  

  let id = location.search.split("=")[1];
  let sel = document.getElementById("sel");
  let vd = document.getElementById("vd");
  
  arr.forEach(item => {sel.innerHTML += `<option>${item[1]}</option>`});
  
  sel.selectedIndex = id;

  vd.src = "https://www.youtube.com/embed/"+arr[id][2].split("=")[1];
  

  sel.addEventListener("change", function(){
    location.href = "/course?id="+this.selectedIndex;
  }); 

  document.getElementById("next").addEventListener("click", function(e){
    if(id == sel.childElementCount - 1){
      e.preventDefault();
      return;
    }
    location.href = "/course?id="+(parseInt(id)+1)
  });

  document.getElementById("preview").addEventListener("click", function(e){
    if(id == 0){
      e.preventDefault();
      return
    }
    location.href = "/course?id="+(parseInt(id)-1)
  });
</script>
