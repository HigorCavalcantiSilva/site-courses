<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Dashboard</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Tempusdominus Bbootstrap 4 -->
  <link rel="stylesheet" href="plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
  <!-- iCheck -->
  <link rel="stylesheet" href="plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- JQVMap -->
  <link rel="stylesheet" href="plugins/jqvmap/jqvmap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- overlayScrollbars -->
  <link rel="stylesheet" href="plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
  <!-- Daterange picker -->
  <link rel="stylesheet" href="plugins/daterangepicker/daterangepicker.css">
  <!-- summernote -->
  <link rel="stylesheet" href="plugins/summernote/summernote-bs4.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  <script>
     if(localStorage.getItem("data") == null){
      let user = '<%=res.user%>';
      let pass = '<%=res.pass%>';
      let nome = '<%=res.nome%>';
      let cell_phone = '<%=res.cell_phone%>';
      let email = '<%=res.email%>';
      let date_subscribe = '<%=res.date_subscribe%>';
      let last_class = '<%=res.last_class%>';

      if(user == ""){
        location.href = "/";
      }
    
      let data = [[user], [pass], [nome], [cell_phone], [email], [date_subscribe], [last_class]];
    
      localStorage.setItem("data", data);
    }

    function logout(){
      localStorage.removeItem("data");
      location.href = "/";
    }
  </script>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
    </ul>
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/dashboard" class="brand-link">
      <img src="dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
           style="opacity: .8">
      <span class="brand-text font-weight-light">Site de Maquiagem</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <h3 class="img-circle elevation-2" style="background: cadetblue; width: 30px; color: white; text-align: center;"><script>document.write(localStorage.getItem("data").split(",")[2][0].toUpperCase())</script></h3>
        </div>
        <div class="info">
          <a href="#" class="d-block"><script>document.write(localStorage.getItem("data").split(",")[2])</script></a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-header">AÇÕES</li>
          <li class="nav-item">
            <a href="/profile" class="nav-link">
              <i class="nav-icon far fa-circle text-info"></i>
              <p>Meu Perfil</p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/feedback" class="nav-link">
              <i class="nav-icon far fa-circle text-warning"></i>
              <p>Deixe um feedback</p>
            </a>
          </li>
          <li class="nav-item">
            <a onclick="logout()" class="nav-link">
              <i class="nav-icon far fa-circle text-danger"></i>
              <p class="text">Sair (Logout)</p>
            </a>
          </li>
          
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
          <div class="col-lg-12 col-12">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h3><script>document.write(localStorage.getItem("data").split(",")[2])</script></h3>

                <p>Seja Bem-Vindo!</p>
              </div>
              <div class="icon">
                <i class="ion ion-user"></i>
              </div>
              <a id="cursar" class="small-box-footer"><script>
                if(localStorage.getItem("data").split(",")[6] == 0){
                  document.write("Iniciar Curso");
                } else {
                  document.write("Continuar Curso");
                }
              </script> <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
        </div>
        <!-- /.row -->
    </section>
    </div>
  <footer class="main-footer">
    <strong>Copyright &copy; 2020 Site de Maquiagem.</strong>
    Todos os direitos reservados.
    <div class="float-right d-none d-sm-inline-block">
      <b>Version</b> 1.0.0
    </div>
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
